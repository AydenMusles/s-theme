<script type="application/ld+json">
  {
    "@context": "http://schema.org/",
    "@type": "Product",
    "name": {{ product.title | strip_html | json }},
    "image": "{{ product.featured_image | img_url | prepend: 'https:' }}",
    "description": {{ product.description | strip_html | json }},
    "brand": {{ product.vendor | json }},
    "sku": {{ variant.sku | json }},
    "url": "{{ shop.url }}{{ variant.url }}",
    "offers": {
      "@type": "Offer",
      "priceCurrency": {{ shop.currency | json }},
      "price": {{ variant.price | money_without_currency | json }},
      "url": "{{ shop.url }}{{ variant.url }}",
      "availability": "{% if product.available %}http://schema.org/InStock{% else %}http://schema.org/OutOfStock{% endif %}"
    },
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "5",
      "ratingCount": "5"
    }
  }
</script>